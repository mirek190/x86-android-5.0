<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/SettingsScreen"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_gravity="bottom" 
    android:background="#000000" >
    
    <LinearLayout
        android:id="@+id/LL_GeneralSettings"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dip"
        android:baselineAligned="false"
        android:orientation="vertical" >

        <LinearLayout
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:layout_marginTop="5dip"
	        android:baselineAligned="false"
	        android:orientation="horizontal" >
                
	        <LinearLayout
	            android:layout_weight="1"
	            android:layout_marginLeft="5dip"
	            android:layout_marginRight="5dip"        
	            android:layout_width="fill_parent"
	            android:layout_height="wrap_content"
	            android:orientation="vertical" >
	
	            <TextView
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content" 
	                android:text="@string/video_res_min"
	                android:textColor="#FFFFFF" />
	            
	            <Spinner 
		            android:id="@+id/SP_VideoResolutionMin"
		            android:layout_width="fill_parent"
		            android:layout_height="wrap_content" />
	            
	        </LinearLayout>
	
	        <LinearLayout
	            android:layout_weight="1"
	            android:layout_marginLeft="5dip"
	            android:layout_marginRight="5dip"   
	            android:layout_width="fill_parent"
	            android:layout_height="wrap_content"
	            android:orientation="vertical" >
	
	            <TextView
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content" 
	                android:text="@string/video_res_max"
	                android:textColor="#FFFFFF" />
	            
	            <Spinner 
	                android:id="@+id/SP_VideoResolutionMax"
	                android:layout_width="fill_parent"
	                android:layout_height="wrap_content" />
	
	        </LinearLayout>
	        
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dip"
            android:baselineAligned="false"
            android:orientation="horizontal" >
                
            <LinearLayout
                android:layout_weight="1"
                android:layout_marginLeft="5dip"
                android:layout_marginRight="5dip"        
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >
    
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" 
                    android:text="@string/video_fps_min"
                    android:textColor="#FFFFFF" />
                
                <Spinner 
                    android:id="@+id/SP_VideoFrameRateMin"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content" />
                
            </LinearLayout>
    
            <LinearLayout
                android:layout_weight="1"
                android:layout_marginLeft="5dip"
                android:layout_marginRight="5dip"   
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >
    
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" 
                    android:text="@string/video_fps_max"
                    android:textColor="#FFFFFF" />
                
                <Spinner 
                    android:id="@+id/SP_VideoFrameRateMax"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content" />
    
            </LinearLayout>
            
        </LinearLayout>        
        
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dip"
            android:baselineAligned="false"
            android:orientation="horizontal" >
                
            <LinearLayout
                android:layout_weight="1"
                android:layout_marginLeft="5dip"
                android:layout_marginRight="5dip"        
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >
    
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" 
                    android:text="@string/video_aspect_ratio_min"
                    android:textColor="#FFFFFF" />
                
                <Spinner 
                    android:id="@+id/SP_VideoAspectRatioMin"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content" />
                
            </LinearLayout>
    
            <LinearLayout
                android:layout_weight="1"
                android:layout_marginLeft="5dip"
                android:layout_marginRight="5dip"   
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >
    
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" 
                    android:text="@string/video_aspect_ratio_max"
                    android:textColor="#FFFFFF" />
                
                <Spinner 
                    android:id="@+id/SP_VideoAspectRatioMax"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content" />
    
            </LinearLayout>
            
        </LinearLayout>         
        
    </LinearLayout>
    
    
    
    <LinearLayout
        android:id="@+id/LL_ExtendedSettings"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dip"
        android:layout_marginBottom="5dip"
        android:baselineAligned="false"
        android:visibility="gone"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dip"
            android:baselineAligned="false"
            android:orientation="horizontal" >
                
            <LinearLayout
                android:layout_weight="1"
                android:layout_marginLeft="5dip"
                android:layout_marginRight="5dip"        
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >
    
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" 
                    android:text="@string/video_codec"
                    android:textColor="#FFFFFF" />
                
                <Spinner 
                    android:id="@+id/SP_VideoCodec"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content" />
                
            </LinearLayout>
    
            <LinearLayout
                android:layout_weight="1"
                android:layout_marginLeft="5dip"
                android:layout_marginRight="5dip"   
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >
    
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" 
                    android:text="@string/audio_codec"
                    android:textColor="#FFFFFF" />
                
                <Spinner 
                    android:id="@+id/SP_AudioCodec"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content" />
    
            </LinearLayout>
            
        </LinearLayout>        
        
        
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dip"
            android:baselineAligned="false"
            android:orientation="horizontal" >
                
            <LinearLayout
                android:layout_weight="1"
                android:layout_marginLeft="5dip"
                android:layout_marginRight="5dip"        
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >
    
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" 
                    android:text="@string/video_bitrate"
                    android:textColor="#FFFFFF" />
                
                <Spinner 
                    android:id="@+id/SP_VideoBitRate"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content" />
                
            </LinearLayout>
    
            <LinearLayout
                android:layout_weight="1"
                android:layout_marginLeft="5dip"
                android:layout_marginRight="5dip"   
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >
    
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" 
                    android:text="@string/audio_bitrate"
                    android:textColor="#FFFFFF" />
                
                <Spinner 
                    android:id="@+id/SP_AudioBitRate"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content" />
    
            </LinearLayout>
            
        </LinearLayout>
        
    </LinearLayout>   
 
    <LinearLayout
        android:id="@+id/LL_OperationButtons"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dip"
        android:layout_marginBottom="5dip"
        android:baselineAligned="false"
        android:orientation="horizontal" >
        
        <Button
            android:id="@+id/BT_SettingsCancel"
            android:layout_weight="1"
            android:layout_marginLeft="5dip"
            android:layout_marginRight="5dip"        
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@layout/settingsbutton"
            android:textColor="#FFFFFF"
            android:text="@string/save" />
		    	
        <Button
            android:id="@+id/BT_SettingsSave"
            android:layout_weight="1"
            android:layout_marginLeft="5dip"
            android:layout_marginRight="5dip"   
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@layout/settingsbutton"
            android:textColor="#FFFFFF"
            android:text="@string/cancel" />
		
    </LinearLayout>
    
</LinearLayout>